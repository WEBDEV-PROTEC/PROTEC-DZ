<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_form_l10n_dz_enhanced" model="ir.ui.view">
        <field name="name">res.partner.form.l10n.dz.enhanced</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='accounting_entries']" position="after">
                <group>
                </group>
                <group string="Information fiscale" attrs="{'invisible':[('company_type','not in','company')]}">
                    <field name="fiscal_position" options="{'no_edit' : True, 'no_create': True}"/>
                    <field name="rc" class="oe_line"/>
                    <field name="nif" class="oe_line"/>
                    <field name="ai" class="oe_line"/>
                    <field name="nis" class="oe_line"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='user_ids']" position="before">
                <field name="fax" widget="phone"/>
            </xpath>
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//div[@class='o_address_format']/field[@name='state_id']" position="attributes">
                <attribute name="placeholder">Wilaya</attribute>
            </xpath>
        </field>
    </record>

    <record id="account_view_partner_property_form_inherit" model="ir.ui.view">
        <field name="name">account.view.partner.property.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='fiscal_information']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
        </field>
    </record>
</odoo>