<?xml version="1.0"?>
<odoo>
    <template id="report_account_invoice_document_custom_base" inherit_id="account.report_invoice_document">

        <xpath expr="//t[@t-set='address']" position="replace">
            <t t-set="address">
                <div style="line-height: 100%; padding-top:10px; font-size:12px;">
                    <div>
                        <strong><span t-field="o.partner_id.name"/></strong>
                    </div>
                    <div style="padding-top:10px;">
                        <span t-field="o.partner_id.street"/>
                    </div>
                    <div style="padding-top:10px;">
                        <span t-field="o.partner_id.street2"/>
                    </div>
                    <div style="padding-top:10px;">
                        <span t-field="o.partner_id.zip"/> <span t-field="o.partner_id.city"/> <span t-if="o.partner_id.state_id">(<span t-field="o.partner_id.state_id"/>),</span> <span t-field="o.partner_id.country_id"/>
                    </div>
                    <div style="padding-top:10px;">
                        <span t-if="o.partner_id.phone">Tél:<span t-field="o.partner_id.phone"/>-</span><span t-if="o.partner_id.mobile"> Mobile:<span t-field="o.partner_id.mobile"/>-</span><span t-if="o.partner_id.fax"> Fax:<span t-field="o.partner_id.fax"/></span>
                    </div>
	            </div>

                <div style="line-height: 50%; padding-top:15px; font-size:11px;">
                    <div >
	                    <span t-if="o.partner_id.ref">N° Client : <span t-field="o.partner_id.ref" style="text-align:left"/></span>
                    </div>
	                <div style="padding-top:10px;">
                        <span t-if="o.partner_id.num_rc">RC N°: <span t-field="o.partner_id.num_rc"/></span>
	                    <span t-if="o.partner_id.art">AI : <span t-field="o.partner_id.art"/></span>
                    </div>
                    <div style="padding-top:10px;">
	                    <span t-if="o.partner_id.vat">NIF : <span t-field="o.partner_id.vat" style="text-align:left"/></span>
	                    <span t-if="o.partner_id.nis">NIS :  <span t-field="o.partner_id.nis" style="text-align:left"/></span>
                    </div>

	            </div>
            </t>
        </xpath>

        <xpath expr="//div[@class='clearfix']" position="inside">
            <p class="col-xs-8 pull-left" name="montant" style="page-break-inside: always;">
	            <div>
	                <strong t-if="o.state not in ['draft','sent']">Arrêtée la présente facture à la somme de:</strong>
	                <strong t-if="o.state in ['draft','sent']">Arrêtée la présente proforma à la somme de:</strong>
                    <p t-esc="o.custom_amount_to_text(o.montant_en_lettres)"/>
	            </div>
	        </p>
                <table style="width: 100%; height: 140px; padding-top:10px; padding-bottom:15px; padding-left:4px; page-break-before: auto;">
                <tr>
                    <th style="border: 1px solid black; width:25%; font-size:13px;">
                        <p style="padding-top:5px; text-align:center;">
	                        Visa / Signature client: <br/> <strong class="list-inline-item" style="text-align:center;">Solde actuel: <span t-field="o.amount_residual"/></strong>
	                    </p>
                    </th>
                    <th style="width:50%;">
                    </th>
                    <th style="border: 1px solid black; width:25%; font-size:13px;">
                        <p style="text-decoration:underline;padding-top:5px; text-align:center;">
	                        Visa / Signature :
	                    </p>
                    </th>
                </tr>
            </table>
            <br/>
        </xpath>

