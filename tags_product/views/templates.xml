<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    
    <template id="sku_after_product" name="SKU after product" inherit_id="website_sale.product"> 
        <xpath  expr="//div[@id='product_details']/h1" position="after">
            <div class="te_p_sku mt-2 mb-2">
                <div class="te_sku">SKU:</div>
                <div class="js_sku_div" itemprop="sku">N/A</div>
                <span t-if="product.barcode" class="d-inline">| EAN:
                    <span t-esc="product.barcode"/>
                </span>
            </div>
        </xpath>
    </template>
    <template id="tags_product" name="Tags for product" inherit_id="website_sale.product">
        <xpath expr="//div[@id='product_details']/h1" position="after">
            <div class="row"> 
                <style> 
                    :root {
                        /* Theme */
                        --primary-color: #1662f3;
                        --light-color: #d0dffc;
                        --dark-color: #283b70;
                        --regular-font: 'Inter', sans-serif;
                    }
                    .tags {
                        margin: 0;
                        padding: 0;
                        list-style-type: none;
                        display: flex;
                        gap: 1.1rem;
                        flex-wrap: wrap;
                    }

                    .tag {
                        --color: var(--light-color);
                        font-family: var(--regular-font);
                        font-size: .9rem;
                        border-radius: 100rem;
                        /* box-shadow: 0 0 0 1.5px var(--light-color); */
                        background-color: transparent;
                        color: #0095ed;
                        font-weight: bold;
<!--                         transition: background-color 250ms ease, box-shadow 314ms ease; -->
                        width: fit-content;
                    }

                    .tag>a {
                        display: inline-block;
                        position: relative;
                        color: var(--dark-color);
                        text-decoration: none;
                        padding: 0.5rem;
                    }

                    .tag-image {
                        max-height: 64px;
                    }
                </style>
                <div class="col-12"> 
                <!--tags -->
                    <div t-if="product.dr_tag_ids">
                        <hr style="margin-top: 16px;" />
<!--                         <div t-foreach="product.dr_tag_ids" t-as="tag"> 
                            <span t-field="tag.name"/>
                        </div>  -->
                        <ul style="padding: 18px 0;" class="tags">
                            <li class="tag" style="--color: #efd81d;" t-foreach="product.dr_tag_ids" t-as="tag" >
<!--                              <a t-field="tag.name"/> -->
                                <img class="tag-image" t-if="tag.image" t-attf-src="data:image/gif;base64, #{tag.image}" alt="category.name"/>
                                <a t-else="" t-field="tag.name"/>                        
                            </li>
                        </ul>
<!--                         <hr/> -->
                    </div>
                </div>
            </div> 
         </xpath>
    </template>
</odoo>