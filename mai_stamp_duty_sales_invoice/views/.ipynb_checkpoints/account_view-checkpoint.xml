<?xml version="1.0"?>
<odoo>
    <data>

        <record id="view_move_form_cct" model="ir.ui.view">
            <field name="name">account.move.form.inherit.cct</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="payment_method_id" invisible="1"/>
                     <field name="cash_" />
                </xpath>
                <xpath expr="//field[@name='amount_by_group']" position="after">
                    <field name="stamp_duty_tax"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="account_payment_method_from_view">
            <field name="name">account.payment.method.form</field>
            <field name="model">account.payment.method</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="code" class="oe_inline"/>
                            <field name="journal_id"/>
                            <field name="stamp_duty_config_id"/>
                            <field name="payment_type" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="account_payment_method_tree_view">
            <field name="name">account.payment.method.tree</field>
            <field name="model">account.payment.method</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="payment_type" invisible="1"/>
                    <field name="journal_id"/>
                    <field name="stamp_duty_config_id"/>
                </tree>
            </field>
        </record>

        <record id="account_payment_method_action" model="ir.actions.act_window">
            <field name="name">Payment Method</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.payment.method</field>
            <field name="view_mode">tree,form</field>
       </record>

        <menuitem id ="account_payment_method_menu" parent="account.menu_finance_configuration" action="account_payment_method_action" sequence="1"/>

    </data>
</odoo>
