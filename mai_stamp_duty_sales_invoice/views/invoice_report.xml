<odoo>

    <template id="stamp_duty_sale_report" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@id='total']/div/table/t" position="after">
            <t t-if="doc.stamp_duty_tax > 0">
                <tr>
                    <td>
                        <span>Stamp Duty </span>
                    </td>
                    <td class="text-right">
                        <span t-field="doc.stamp_duty_tax"
                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                    </td>
                </tr>
            </t>
        </xpath>
    </template>

    <template id="stamp_duty_invoice_report" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='total']/div/table/t" position="after">
            <t t-if="o.stamp_duty_tax > 0">
                <tr>
                    <td>
                        <span>Stamp Duty </span>
                    </td>
                    <td class="text-right">
                        <span t-field="o.stamp_duty_tax"
                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </td>
                </tr>
            </t>
        </xpath>
        <xpath expr="//div[hasclass('clearfix')]" position="after">
            <div class="tax_list">
                <div id="total" class="row col-6">
                    <table class="table table-sm" style="page-break-inside: avoid;">
                        <thead>
                            <tr>
                                <th class="text-left"><span>Taxes</span></th>
                                <th class="text-left"><span>Account Name</span></th>
                                <th class="text-right"><span>Amount</span></th>
                            </tr>
                        </thead>
                        <t t-set="move_ids" t-value="o.line_ids.filtered(lambda line: line.exclude_from_invoice_tab and line.credit > 0)" />
                        <t t-foreach="move_ids.sorted(key=lambda m: m.id)" t-as="j_line">
                            <tr style="">
                                <td><span class="text-nowrap" t-esc="j_line.name"/></td>
                                <td><span class="text-nowrap" t-esc="j_line.account_id.name"/></td>
                                <td class="text-right o_price_total"><span class="text-nowrap" t-esc="j_line.credit"  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                            </tr>
                        </t>
                    </table>
                </div>
            </div>
        </xpath>

    </template>
</odoo>