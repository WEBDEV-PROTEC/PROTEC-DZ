<?xml version="1.0"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="stamp_duty_config_from_view">
            <field name="name">stamp.duty.config.form</field>
            <field name="model">stamp.duty.config</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="tax_percentage" class="oe_inline"/>
                            <field name="account_id"/>
                            <field name="is_include_tax"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="stamp_duty_config_tree_view">
            <field name="name">stamp.duty.config.tree</field>
            <field name="model">stamp.duty.config</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="tax_percentage"/>
                    <field name="account_id"/>
                    <field name="is_include_tax"/>
                </tree>
            </field>
        </record>

        <record id="stamp_duty_config_action" model="ir.actions.act_window">
            <field name="name">Stamp Duty Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stamp.duty.config</field>
            <field name="view_mode">tree,form</field>
       </record>

        <menuitem id ="stamp_duty_config_menu" parent="account.menu_finance_configuration" action="stamp_duty_config_action" sequence="1"/>

    </data>
</odoo>
