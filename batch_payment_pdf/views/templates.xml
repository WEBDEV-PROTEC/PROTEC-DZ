<odoo>
    <data>
        <template id="custom_batch_payment_report" inherit_id="account_batch_payment.print_batch_payment">
            <xpath expr="//div[@class='page page_batch_payment'][1]" position="replace">
                <div t-foreach="pages(o)" t-as="page" class="page page_batch_payment">
                    <style>
                        .check {
                            margin-left: 5px;
                            height: 24px;
                            width: 24px;
                            border: 3px solid #005187;
                            display: inherit;
                            /* align-self: center; */
                            top: 5px;
                            position: relative;
                        }
                        th {
                            background-color: #cce0ed !important; 
                            text-align: center;
                            font-size: 15px;
                        }
                        td {
                            font-size: 14px;
                        }
                        table, th, td {
                            border: 1px solid #005187 !important;
                        }
                    </style>
                    <div>
                        <div class="row mb-5">
                            <div class="col-6">
                                <img src="/batch_payment_pdf/static/download.png" alt="" style="height: 64px;"/>
                                <!--                                <img src="/batch_payment_pdf/static/protec.png" alt="" style="height: 64px;"/> -->
                            </div>
                            <div class="col-6 text-center">
                                <h4 style="color: #005187"> تسليم صكوك</h4>
                                <h4 style="color: #005187">REMISE DE CHEQUES</h4>
                            </div>
                            <!--                         <div class="col-12 col-lg-4 col-md-4">
                                <span class="p-2">
                                    <h6 style="color: #005187;">
                                        <t t-esc="page['journal_name']"/>
                                        : 
                                        <t t-esc="page['batch_name']"/>
                                    </h6>
                                </span>
                                </div> -->
                        </div>
                        <div class="row">
                            <div class="col-9">
                                <div class="row">
                                    <div class="col-12 col-lg-12 col-md-12">
                                        <div class="row">
                                            <div class="col-6 col-lg-6 col-md-6">
                                                <label for=""> <b>ENCAISSEMENT</b> 
                                                <span class="check"> <i style="top: -9px; position: relative" class="fa fa-check fa-2x"></i></span>
                                                </label>
                                            </div>
                                            <div class="col-6 col-lg-6 col-md-6">
                                                <label for=""> <b>ESCOMPTE</b>
                                                <span class="check"> </span>
                                                </label>
                                            </div>
                                        </div>
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th class="text-left">
                                                        مؤسسة الدفع<br/>
                                                        Etablissement payeur
                                                    </th>
                                                    <th class="text-left">
                                                        مكان الدفع
                                                        <br/>Lieu de payment
                                                    </th>
                                                    <th class="text-left">اسم الساحب<br/>Nom de tireur</th>
                                                    <th class="text-left">رقم الصك<br/>N° de Chéque</th>
                                                    <th class="text-right">المبلغ<br/>Montant</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr t-foreach="page['payments']" t-as="payment">
                                                    <td class="text-left">
                                                        <t t-if="payment.cheq_bank" t-esc="payment.cheq_bank"/>
                                                    </td>
                                                    <td class="text-left">
                                                         <t t-if="payment.cheq_place" t-esc="payment.cheq_place"/>
                                                    </td>
                                                    <td class="text-left">
                                                        <t t-if="payment.cheq_name"  t-esc="payment.cheq_name"/>
                                                    </td>
                                                    <td class="text-left">
                                                        <t t-if="payment.cheq_num" t-esc="payment.cheq_num"/>
                                                    </td>
                                                    <td class="text-right">
                                                        <t t-esc="payment.amount" t-options="{'widget': 'monetary', 'display_currency': payment.currency_id}"/>
                                                    </td>
                                                </tr>
                                            </tbody>
                                            <tfoot t-if="page['total_amount']">
                                                <tr>
                                                    <td style="visibility: hidden;" />
                                                    <td style="visibility: hidden;" />
                                                    <td style="visibility: hidden;" />
                                                    <td><b>Montant total</b></td>
                                                    <td class="text-right">
                                                        <span>
                                                            <t t-esc="page['total_amount']" t-options="{'widget': 'monetary', 'display_currency': page['currency']}"/>
                                                        </span>
                                                    </td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                                <div class="row mt-5">
                                    <div class="col-12 col-lg-6 col-md-6" >
                                        <b>
                                            Nombre de cheques:
                                            <t t-esc="len(page['payments'])"/>
                                        </b>
                                    </div>
                                    <hr/>
                                </div>
                                <div class="row">
                                    <div class="col-12 col-lg-12 col-md-12">
                                        <b>
                                            Date: 
                                            <t t-esc="page['date']"/>
                                        </b>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3" style="margin-top: 30px;">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th scope="col">
                                                الاسم أو الغرض الاجتماعي <br/>
                                                Nom ou raison sociale
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td scope="row"> <br/>SARL PROTEC<br/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th scope="col">العنوان Adresse</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td scope="row">70 Avenue Mustapha Ben Boulaid (Ex Albert 1er) Oran 31000</td>
                                        </tr>
                                    </tbody>
                                </table>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th scope="col">رقم الحساب N° de compte</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td scope="row"><br/>0357.5912.08-92<br/></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!--END/ -->
                    </div>

                 
                </div>
            </xpath>
        </template>
    </data>
</odoo>