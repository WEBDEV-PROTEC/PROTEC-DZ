                                                <th class="text-left h5">Client</th>
                                                <th class="text-left h5">Numéro de Cheque</th>
                                                <th class="text-left h5">Date</th>
                                                <th class="text-left h5">Memo</th>
                                                <th class="text-right h5">Total</th>
                                            </tr>
                                        </thead>
