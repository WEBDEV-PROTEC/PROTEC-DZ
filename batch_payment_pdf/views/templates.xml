                        <div class="col-12 col-lg-4 col-md-4">
                            <img src="/batch_payment_pdf/static/protec.png" alt="" style="height: 64px;"/>
                        </div>
                        <div class="col-12 col-lg-4 col-md-4">
                            <span class="p-2">
                                <h6 style="color: #005187;">
                                    <t t-esc="page['journal_name']"/>
                                    : 
                                    <t t-esc="page['batch_name']"/>
                                </h6>
                            </span>
                        </div>
