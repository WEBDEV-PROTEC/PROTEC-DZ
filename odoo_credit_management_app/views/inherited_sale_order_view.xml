<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="inherited_sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="hold_delivery" readonly="1" force_save="True"/>
                <field name="over_credit" readonly="1"/>
                <field name="has_overdue"/>
            </xpath>

        </field>
    </record>
    <record id="inherited_sale_order_view_tree" model="ir.ui.view">
        <field name="name">sale.order.view.tree.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_status']" position="after">
                <field name="over_credit" readonly="1"/>
            </xpath>

        </field>
    </record>
</odoo>
