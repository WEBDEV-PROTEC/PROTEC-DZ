<odoo>
    <template id="videoplayer"  name="Video player" inherit_id="website.s_carousel">
       <xpath expr='//div[@class="carousel-inner"]//div[2]' position="replace">
            
      <header class="myheader">

  <!-- This div is  intentionally blank. It creates the transparent black overlay over the video which you can modify in the CSS -->
  <div class="overlay"></div>

  <!-- The HTML5 video element that will create the background video on the header -->
  <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop">
    <source src="/video_player/static/protec.mp4" type="video/mp4" />
  </video>

  <!-- The header content -->
  <div class="container h-100">
    <div class="d-flex h-100 text-center align-items-center">
      <div class="w-100 text-white">
        <h1 class="display-3">PROTEC</h1>
        <p class="lead mb-0">Votre fournisseur IT et sécurité depuis 1998</p>
      </div>
    </div>
  </div>
</header>
               
        </xpath>
    </template>


        <template id="customplayer" name="customplayer" inherit_id="website.assets_frontend">
         <xpath expr="//link[last()]" position="after">
        <link rel="stylesheet" type="text/css" href="/video_player/static/main.css"/>
        </xpath>
    </template>
</odoo>