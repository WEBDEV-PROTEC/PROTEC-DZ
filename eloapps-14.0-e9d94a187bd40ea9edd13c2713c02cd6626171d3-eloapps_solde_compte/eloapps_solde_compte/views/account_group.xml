<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_group_1" model="ir.ui.view">
            <field name="name">account.group.inherit.view.form</field>
            <field name="model">account.group</field>
            <field name="inherit_id" ref="account.view_account_group_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="replace">
                    <form>
                        <sheet>
                            <group>
                                <group>
                                    <field name="name"/>
                                    <field name="code_prefix_start"/>
                                    <field name="code_prefix_end" invisible="1"/>
                                    <field name="parent_id"/>
                                </group>
                                <group>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                    <field name="balance"/>
                                </group>
                            </group>

                            <notebook>
                                <page string="Comptes liés">
                                    <field name="account_ids">
                                        <tree>
                                            <field name="code"/>
                                            <field name="name"/>
                                            <field name="debit"/>
                                            <field name="credit"/>
                                        </tree>
                                    </field>
                                </page>

                                <page string="Groupes liés">
                                    <field name="group_ids">
                                        <tree>
                                            <field name="code_prefix_start" string="Code"/>
                                            <field name="code_prefix_end" invisible="1"/>
                                            <field name="name"/>
                                            <field name="debit"/>
                                            <field name="credit"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </sheet>
                    </form>
                </xpath>
            </field>
        </record>

        <record id="action_account_group_1" model="ir.actions.act_window">
            <field name="name">Classes/Chapitres</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.group</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>