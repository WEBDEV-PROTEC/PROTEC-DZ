<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_plan_comptable_line">
        <tr t-foreach="lines" t-as="a">
            <t t-set="trclass" t-value="'o_stock_reports_default_style'"/>
            <t t-if="a.get('model') == 'account.group'">
                <t t-set="trclass" t-value="'o_stock_reports_level0'"/>
            </t>
            <t t-set="domainClass" t-value="'o_stock_reports_domain_line'"/>
            <t t-if="a['unfoldable'] == false">
                <t t-set="domainClass" t-value="'o_stock_reports_domain_line_1'"/>
            </t>
            <t t-set="column" t-value="0" />
            <tr t-att-data-unfold="a['unfoldable']" t-att-data-parent_id="a['parent_id']" t-att-data-id="a['id']" t-att-data-model_id="a['model_id']" t-att-data-model="a['model']" t-att-class="trclass">
                <t t-set="tdclass" t-value="''" />
                <t t-set="spanclass" t-value="''" />
                <t t-set="span_color" t-value="'color: #666666;'"/>

                <t t-if="a.get('unfoldable')">
                    <t t-set="tdclass" t-value="'o_stock_reports_unfoldable'" />
                </t>
                <t t-if="not a.get('unfoldable')">
                    <t t-set="spanclass" t-value="'o_stock_reports_nofoldable'" />
                </t>
                <t t-set="column" t-value="0" />
                <t t-foreach="a['columns']" t-as="c">
                    <t t-set="column" t-value="column + 1" />
                    <t t-if="column in [3, 4, 5]">
                        <t t-set="tdclass" t-value="'o_mrp_prod_cost text-right'" />
                    </t>
                    <td t-att-data-id="a.get('id')" t-att-data-model="a['model']" t-att-data-model_id="a['model_id']" t-att-class="tdclass" t-att-data-level="a['level']">
                        <t t-if="column == 1">
                            <t t-if="a.get('unfoldable')">
                                <span t-att-data-id="a['id']" class="o_stock_reports_unfoldable o_stock_reports_caret_icon">
                                    <i class="fa fa-fw fa-caret-right" role="img" aria-label="Unfold" title="Unfold">
                                    </i>
                                </span>
                            </t>
                        </t>
                        <span t-att-class="spanclass">
                            <a t-att-data-active-id="a['res_id']" t-att-data-res-model="a['res_model']" class="o_stock_reports_web_action" href="#">
                                <t t-if="column in [1, 2]" t-esc="c" />
                                <t t-if="column in [3, 4, 5]" t-esc="'%.2f'% float(c)" />
                            </a>
                        </span>
                    </td>
                </t>
            </tr>
        </tr>
    </template>

    <template id="report_l10n_dz_html">
        <div class="container o_mrp_bom_report_page" style="position:absolute; top:220px; left:100px;">
            <span class="o_report_heading text-left">
                <h1>Plan des comptes</h1>
            </span>
            <span>
                <t t-esc="context"/>
            </span>
            <div class="row">
                <div class="col-lg-12">
                    <div class="mt16">
                        <table width="100%" class="o_mrp_bom_expandable">
                            <thead>
                                <tr class="o_report_header">
                                    <th class="o_report_line_header">Code</th>
                                    <th class="o_report_line_header">Nom</th>
                                    <th class="o_report_line_header">Debit</th>
                                    <th class="o_report_line_header">Credit</th>
                                    <th class="o_report_line_header">Solde</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-call="eloapps_solde_compte.report_plan_comptable_line"/>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td><b>Solde total</b></td>
                                    <td class="text-right"><b><t t-esc="'%.2f'% solde_total"/></b></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </template>
</odoo>
