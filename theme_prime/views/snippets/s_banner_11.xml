<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="s_banner_11" name="Banner - 11">
        <section class="s_banner_11 pt16 pb16">
            <div class="container">
                <div class="row s_nb_column_fixed" >
                    <div  style="min-width: 20% !important;" class="col-12 col-lg-2 py-3 tp-block-container" t-foreach="request.env['product.public.category'].search([])" t-as="categ" >
                        <div class="tp-img-container position-relative" t-attf-style="background-image: url('data:image/png;base64, #{categ.image_1920}">
                            <div class="tp-block-content h-100 w-100">
                                <a t-att-href="'/shop/category/%s' %(categ.id)">
                                    <h2 class="tp-title text-center w-100" style="font-size:14px;top: 84%;" t-field="categ.name"/>
                                </a>  
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <template id="s_banner_11_options" inherit_id="website.snippet_options">
        <xpath expr="." position="inside">
            <t t-call="web_editor.snippet_options_background_options">
                <t t-set="selector" t-value="'.s_banner_11 .tp-img-container'"/>
                <t t-set="with_colors" t-value="False"/>
                <t t-set="with_images" t-value="True"/>
                <t t-set="with_color_combinations" t-value="False"/>
            </t>
        </xpath>
    </template>
</odoo>
