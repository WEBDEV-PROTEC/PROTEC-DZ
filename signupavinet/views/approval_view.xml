<odoo>
    <data>
        <record id="view_approval_form" model="ir.ui.view">
            <field name="name">approval.signup.view</field>
            <field name="model">approval.signup</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Approvals">
                    <header>
                        <button name="action_toapprove" type="object" string="Approve" states="draft" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="company_statut"/>
                            <field name="nif"/>
                            <field name="rc"/>
                            <field name="ai"/>
                            <field name="city_id"/>
                            <field name="phone"/>
                            <field name="mobile"/>
                        </group>
                        <group>
                              <label for="agrem" class="o_form_label" />
                              <div>
                                    <field name="agrem"  placeholder="Num agrement" />
                                    <field name="exp_agrem" placeholder="Date expiration" />
                              </div>
                        </group>
                        <group>
                            <field name="email"/>
                            <field name="fname"/>
                            <field name="lname"/>
                            <field name="position"/>
                            <field name="phone2"/>
                            <field name="mobile2"/>
                            <!-- <field name="password" /> -->
                        </group>
                        <group>
                             <field name="scan1"/>
                            <field name="scan2"/>
                            <field name="scan3"/>
                            <field name="scan4"/>
                            <field name="scan5"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

       

        <record model="ir.actions.act_window" id="action_view_approval">
            <field name="name">Approvals</field>
            <field name="res_model">approval.signup</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create new Request
                </p>
            </field>
        </record>

        <menuitem id="approval_signup" name="Approvals" parent="crm.crm_menu_root" action="action_view_approval"/>
    </data>
</odoo>