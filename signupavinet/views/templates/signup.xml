    <template id="signupavinet.signup" name="Sign up login">
        <t t-call="web.login_layout">
            <form class="oe_signup_form" role="form" method="post" t-if="not message">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <t t-call="signupavinet.fields">
                    <t t-set="only_passwords" t-value="bool(token and not invalid_token)"/>
                </t>
                <p class="alert alert-danger" t-if="error" role="alert">
                    <t t-esc="error"/>
                </p>
                <input type="hidden" name="redirect" t-att-value="redirect"/>
                <input type="hidden" name="token" t-att-value="token"/>
                <div class="text-center oe_login_buttons pt-3">
                <button type="submit" class="nb btn btn-primary btn-block">Sign up</button>
                <a t-attf-href="/web/login?{{ keep_query() }}" class="btn btn-link" role="button">Already
                have an account?
                </a>
                <div class="o_login_auth"/>
                </div>
            </form>
        </t>
    </template>
    <template id="signup_from_inherit" inherit_id="signupavinet.signup" name="Signup Inherit">
        <form class="oe_signup_form" position="attributes">
            <attribute name="action">/request_sent</attribute>
            <attribute name="enctype">multipart/form-data</attribute>
        </form>
        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
        <div class="text-center oe_login_buttons pt-3" position="replace">
        <!--            <t t-if="url">-->
        <!--         <div class="row">
            <div class="text-center col col-12">
