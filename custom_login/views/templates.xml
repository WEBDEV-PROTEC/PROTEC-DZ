<odoo>
    <data>
        <template id="customlogin"  name="Custom Login" inherit_id="web.login">
            <xpath expr='//form[@class="oe_login_form"]' position="replace">
                <div class="row">
                <div class="col-12 col-md-6 col-lg-6">
                    <form style="border: #DEE2E6 1px solid; padding: 20px; max-width: 500px" class="oe_login_form" role="form" t-attf-action="/web/login" method="post" onsubmit="this.action = '/web/login' + location.hash">
                        <h2 class="display-4 mb-4">Login</h2>
                        <hr/>
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="form-group field-db" t-if="databases and len(databases) &gt; 1">
                            <label for="db" class="col-form-label">Database</label>
                            <div t-attf-class="input-group {{'input-group-sm' if form_small else ''}}">
                                <input type="text" name="db" t-att-value="request.db" id="db" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" readonly="readonly"/>
                                <span class="input-group-append">
                                <a role="button" href="/web/database/selector" class="btn btn-secondary">Select <i class="fa fa-database" role="img" aria-label="Database" title="Database"/></a>
                                </span>
                            </div>
                        </div>
                        <div class="form-group field-login">
                            <label for="login">Email</label>
                            <input type="text" placeholder="Email" name="login" t-att-value="login" id="login" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" autofocus="autofocus" autocapitalize="off"/>
                        </div>
                        <div class="form-group field-password">
                            <label for="password">Password</label>
                            <input type="password" placeholder="Password" name="password" id="password" t-attf-class="form-control #{'form-control-sm' if form_small else ''}" required="required" autocomplete="current-password" t-att-autofocus="'autofocus' if login else None" maxlength="4096"/>
                        </div>

                        <p class="alert alert-danger" t-if="error" role="alert">
                            <t t-esc="error"/>
                        </p>
                        <p class="alert alert-success" t-if="message" role="status">
                            <t t-esc="message"/>
                        </p>
                        <div t-attf-class="clearfix oe_login_buttons text-center mb-1 {{'pt-2' if form_small else 'pt-3'}}">
                            <button type="submit" class="btn btn-primary btn-block btn-lg">Log in</button>
                            <t t-if="debug">
                                <button type="submit" name="redirect" value="/web/become" class="btn btn-link btn-sm btn-block">Log in as superuser</button>
                            </t>
                            <div class="o_login_auth"/>
                                <div class="justify-content-between mt-2 d-flex small">
                                    <a t-if="signup_enabled" t-attf-href="/web/signup?{{ keep_query() }}">Don't have an account?</a>
                                    <a t-if="reset_password_enabled" t-attf-href="/web/reset_password?{{ keep_query() }}">Reset Password</a>
                                </div>
                            </div>

                            <input type="hidden" name="redirect" t-att-value="redirect"/>
                    </form>
                    </div>
                    <div class="col-12 col-md-6 col-lg-6">
                        <div class="oe_login_form" style="max-width: 500px">
                            <div class="card ">
                                <div class="card-body">
                                    <h5 class="card-title">Vous n'êtes pas encore client ?</h5>
                                    <hr/>
                                    <p class="card-text">Accédez à un catalogue de plus de 2000 produits de sécurité et bénéficiez de notre service prévente et après-vente.</p>
                                    <a href="/web/signup" class="card-link btn btn-outline-primary btn-lg w-100">Devenez Client</a>
                                </div>
                            </div>
                        </div>
                        <div class="oe_login_form" style="max-width: 500px">
                            <div class="card ">
                                <div class="card-body">
                                    <h5 class="card-title">Déjà client et vous n'avez pas encore de compte?</h5>
                                    <hr/>
                                    <p class="card-text">Si vous êtes déjà client PROTEC, contactez votre commercial habituel par courriel, nous vous enverrons ensuite le client/mot de passe pour acceder à notre page web des achats.</p>
                                    <a href="mailto:commercial@protec-dz.com" class="card-link btn btn-outline-primary btn-lg w-100">Demandez un identifiant</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>