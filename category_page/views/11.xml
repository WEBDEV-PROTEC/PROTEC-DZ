											 	<t t-foreach="product_category" t-as="rec">
											 		<a t-att-href="'/shop/category/%s' % (rec.id)">	                        
												 		<div class="col-md-6 col-lg-6 col-sm-6 col-xs-12">
															<figure class="sh_effect">
																<div class="img_class">
																	<img t-if="rec.image" t-attf-src="data:image/gif;base64, #{rec.image}" height="400" alt="rec.name"/>
																	<img t-if="not rec.image" src="/sh_website_category_page/static/src/img/default.png" alt="Default Image"/>																	
